{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=AmbevOrderSystem.db"
  },
  "AmbevApi": {
    "BaseUrl": "https://api.ambev.com/",
    "TimeoutSeconds": 30,
    "RetryAttempts": 3,
    "RetryDelaySeconds": [
      2,
      4,
      8
    ],
    "UseMockService": false
  },
  "OrderProcessing": {
    "MinimumQuantity": 1000,
    "ProcessingIntervalMinutes": 5
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}